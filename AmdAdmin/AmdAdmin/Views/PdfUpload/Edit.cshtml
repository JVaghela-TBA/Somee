@model AmdAdmin.Pdf

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout_main.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Pdf</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.PdfId)

        <div class="form-group">
            @Html.LabelFor(model => model.PdfName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PdfName)
                @Html.ValidationMessageFor(model => model.PdfName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PdfDetail, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PdfDetail)
                @Html.ValidationMessageFor(model => model.PdfDetail)
                
                @Html.HiddenFor(model => model.PdfPath)
                @Html.HiddenFor(model =>model.PdfSize )

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
