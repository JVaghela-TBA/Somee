@model AmdAdmin.Pdf

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_main.cshtml";
}

<h2>Create</h2>


<div class="container">
    <div class="row">
        <div>
            <h2>Upload PDF</h2>
            <p class="bottomBorder"></p>
        </div>
        @using (Html.BeginForm("Create", "PdfUpload", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div>
                @Html.TextArea("PdfDetail", "", new { @class = "form-control", placeholder = "Enter Detail..!", rows = "7" })
            </div>
            <div>
                <br/>
                @Html.TextBox("file", "", new { type = "file" }) <br/>
                <input type="submit" value="Upload"/>
                @ViewBag.Message
            </div>
        }
    </div>
    <div class="row">

    </div>
</div>



